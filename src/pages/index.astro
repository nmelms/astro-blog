---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
import Blocks from '../blocks/Blocks.astro';
import { fetchPayloadData } from '../lib/payload';
import { fetchBlogs } from '../lib/fetchBlogs';
import Hero from '../components/Hero.astro';
import FeaturedBlog from '../components/FeaturedBlog.astro';

const data = await fetchPayloadData();
const blogs = await fetchBlogs()

---

<Layout title="Dev Blog">
	<!-- placeholder navbar -->
	<div class="h-16 border-b-2">
		navbar
	</div>
	<main class="container grid grid-cols-1 md:grid-cols-6 md:px-8">
		<section class="h-[1500px] gradient-bg">
			<Hero heroHeading={data.heroHeading} heroSubHeading={data.heroSubHeading}/>
			<Card data={data.featuredBlog}/>
						
		</section>

		{data.layout && <Blocks data={data.layout} />}
		<section class="col-span-1 md:col-span-4 mt-10">
			{blogs.docs.map(blog => (
				<Card data={blog} />
			))}			
		</section>
		<section class="hidden md:col-span-2 md:block mt-10">
			<div class="about-me">
				this is the the about me section
			</div>
		</section>

	</main>
</Layout>

<style>

.gradient-bg {
  background: linear-gradient(to bottom, #040434, #024614);
}




	main {
		min-height: fit-content;
		margin: auto;
		max-width: 1600px;
		font-size: 20px;
		line-height: 1.6;
	}
	.astro-a {
		position: absolute;
		top: -32px;
		left: 50%;
		transform: translatex(-50%);
		width: 220px;
		height: auto;
		z-index: -1;
	}
	h1 {
		font-size: 4rem;
		font-weight: 700;
		line-height: 1;
		text-align: center;
		margin-bottom: 1em;
	}
	.text-gradient {
		background-image: var(--accent-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 400%;
		background-position: 0%;
	}
	.instructions {
		margin-bottom: 2rem;
		border: 1px solid rgba(var(--accent-light), 25%);
		background: linear-gradient(rgba(var(--accent-dark), 66%), rgba(var(--accent-dark), 33%));
		padding: 1.5rem;
		border-radius: 8px;
	}
	.instructions code {
		font-size: 0.8em;
		font-weight: bold;
		background: rgba(var(--accent-light), 12%);
		color: rgb(var(--accent-light));
		border-radius: 4px;
		padding: 0.3em 0.4em;
	}
	.instructions strong {
		color: rgb(var(--accent-light));
	}
	.link-card-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
		gap: 2rem;
		padding: 0;
	}
</style>
