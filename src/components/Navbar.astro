<nav class="bg-gray-800 fixed w-full">
  <div class="mx-auto max-w-7xl px-2 sm:px-6 lg:px-8">
    <div class="relative flex h-16 items-center justify-between">
      <div class="absolute inset-y-0 left-0 flex items-center sm:hidden">
        <!-- Mobile menu button-->
        <button id="mobile-btn" type="button" class="relative inline-flex items-center justify-center rounded-md p-2 text-gray-400 hover:bg-gray-700 hover:text-white focus:outline-none focus:ring-2 focus:ring-inset focus:ring-white" aria-controls="mobile-menu" aria-expanded="false">
          <span class="absolute -inset-0.5"></span>
          <span class="sr-only">Open main menu</span>
          <!--
            Icon when menu is closed.

            Menu open: "hidden", Menu closed: "block"
          -->
          <svg class="block h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
          </svg>
          <!--
            Icon when menu is open.

            Menu open: "block", Menu closed: "hidden"
          -->
          <svg class="hidden h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>
      <div class="flex flex-1 items-center justify-center sm:items-stretch sm:justify-start">
        <div class="flex flex-shrink-0 items-center">
          <i class="fa-solid fa-code text-white"></i>
        </div>
        <div class="hidden sm:ml-6 sm:block">
          <div class="flex space-x-4">
            <!-- Current: "bg-gray-900 text-white", Default: "text-gray-300 hover:bg-gray-700 hover:text-white" -->
            <a id="home-link" href="/" class="rounded-md px-3 py-2 text-sm font-medium text-gray-300 hover:bg-gray-700 hover:text-white" aria-current="page">Home</a>
            <a id="blogs-link" href="/blogs" class="rounded-md px-3 py-2 text-sm font-medium text-gray-300 hover:bg-gray-700 hover:text-white">Blogs</a>
            <a id="about-link" href="/about" class="rounded-md px-3 py-2 text-sm font-medium text-gray-300 hover:bg-gray-700 hover:text-white">About</a>
          </div>
        </div>
      </div>
      </div>
    </div>
  </div>

  <!-- Mobile menu, show/hide based on menu state. -->
  <div class="hidden" id="mobile-menu">
    <div class=" space-y-1 px-2 pb-3 pt-2">
      <!-- Current: "bg-gray-900 text-white", Default: "text-gray-300 hover:bg-gray-700 hover:text-white" -->
      <a id="mobile-home-link" href="/" class="block rounded-md px-3 py-2 text-base font-medium text-gray-300 hover:bg-gray-700 hover:text-white" aria-current="page">Home</a>
      <a id="mobile-blogs-link" href="/blogs" class="block rounded-md px-3 py-2 text-base font-medium text-gray-300 hover:bg-gray-700 hover:text-white">Blogs</a>
      <a id="mobile-about-link" href="/about" class="block rounded-md px-3 py-2 text-base font-medium text-gray-300 hover:bg-gray-700 hover:text-white">About</a>
    </div>
  </div>
</nav>

<script>
  let mobileBtn = document.querySelector('#mobile-btn')
  let mobileMenu = document.querySelector('#mobile-menu')
  let main = document.querySelector('main')

  mobileBtn.addEventListener('click', () => {
    mobileMenu.classList.toggle('hidden')
  })


  document.addEventListener('DOMContentLoaded', () => {
    // need trailing slash on prod
    const mobileLinks = {
      '/': 'mobile-home-link',
      '/blogs/': 'mobile-blogs-link',
      '/about/': 'mobile-about-link'
    };
    const desktopLinks = {
      '/': 'home-link',
      '/blogs/': 'blogs-link',
      '/about/': 'about-link',
    }

    const currentPath = window.location.pathname;
    const currentMobleLink = mobileLinks[currentPath];
    const currentDesktopLink = desktopLinks[currentPath]

    if (currentMobleLink || currentDesktopLink) {
      document.getElementById(currentMobleLink).classList.add('bg-gray-900', 'text-white');
      document.getElementById(currentMobleLink).classList.remove('text-gray-300', 'hover:bg-gray-700', 'hover:text-white');
      document.getElementById(currentDesktopLink).classList.add('bg-gray-900', 'text-white');
      document.getElementById(currentDesktopLink).classList.remove('text-gray-300', 'hover:bg-gray-700', 'hover:text-white');
    }
  });

  main.addEventListener('click', (e) => {

    mobileMenu.classList.add('hidden')
  })




</script>


